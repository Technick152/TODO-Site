<!DOCTYPE html>
<html>
<head>
<title>TODO</title>
</head>
<h1>TODO List</h1>

<ul>
	<% tasks.forEach(task => { %>
		<div>
			<li><%= task %></li>
		</div>
	<% }) %>
</ul>

<form action='/' method="POST">
	<div>
		<label for="task">Enter Task</label>
		<input type="text" id="task" name="task">
		<button type="Submit">Submit</button>
	</div>
</form>
</html>